<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_userid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="学号（工号）"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/et_userid"
        android:hint="昵称"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/et_passwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/et_username"
        android:hint="密码"
        android:inputType="textPassword"
        />

    <EditText
        android:id="@+id/et_repasswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/et_passwd"
        android:hint="再次输入密码"
        android:inputType="textPassword"
        />

    <EditText
        android:id="@+id/et_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/et_repasswd"
        android:hint="出生年月"
        android:inputType="datetime"
        />

    <EditText
        android:id="@+id/et_college"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/et_birth"
        android:hint="学院"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/et_college"
        android:hint="邮箱"
        android:inputType="textEmailAddress"
        />

    <RadioGroup
        android:id="@+id/rg_gender"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_below="@id/et_email">
        <RadioButton
            android:id="@+id/rb_boy"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="男"/>

        <RadioButton
            android:id="@+id/rb_girl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女"/>
    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg_user_type"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_below="@id/rg_gender">
        <RadioButton
            android:id="@+id/rb_student"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="学生"/>

        <RadioButton
            android:id="@+id/rb_teacher"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="教师"/>

    </RadioGroup>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="注册"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/rg_user_type"
        android:background="@color/colorPrimary"
        />



</RelativeLayout>