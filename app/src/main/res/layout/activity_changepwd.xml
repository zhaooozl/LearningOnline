<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/return_black"
            android:textColor="@color/colorFont"
            android:textSize="20sp"
            android:scaleType="fitCenter"
            />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorHight"
            android:text="修改密码"
            android:layout_centerInParent="true"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorHight" />
    </RelativeLayout>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_userid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        android:hint="请输入学号（工号）"
        android:inputType="number"
        />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_oldPasswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/et_userid"
        android:hint="请输入旧密码"
        android:inputType="textPassword"
        />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_newPasswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/et_oldPasswd"
        android:hint="请输入新密码"
        android:inputType="textPassword"
        />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_confirmNewPasswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/et_newPasswd"
        android:hint="请输入新密码"
        android:inputType="textPassword"
        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="确认"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/et_confirmNewPasswd"
        android:background="@color/colorHight"
        />

</RelativeLayout>